<%- include('header_guest') %>
<div class="content">
    <h1>Verify Security Question</h1>
    
    <p>Please answer your security question to proceed with password reset.</p>

    <form action="/verify-security-question" method="POST" class="security-verification-form">
        <input type="hidden" name="username" value="<%= locals.username || '' %>">
        
        <% if (locals.messages && locals.messages.length > 0) { %>
            <ul class="error-messages">
                <% for (let message of locals.messages) { %>
                    <li><%= message %></li>
                <% } %>
            </ul>
        <% } %>

        <% if (locals.rateLimited) { %>
            <div class="rate-limit-warning">
                <h3>⚠️ Too Many Attempts</h3>
                <p>You have exceeded the maximum number of attempts. Please try again after: <strong><%= locals.nextAttemptTime %></strong></p>
            </div>
        <% } else { %>
            <div class="question-display">
                <h3>Security Question:</h3>
                <p class="question-text"><%= locals.securityQuestion || 'Question not found' %></p>
                <% if (locals.questionHint) { %>
                    <p class="question-hint"><strong>Hint:</strong> <%= locals.questionHint %></p>
                <% } %>
            </div>

            <div class="form-group">
                <label for="answer">Your Answer:</label>
                <input type="text" name="answer" id="answer" required 
                       placeholder="Enter your answer (case insensitive)">
                <div class="answer-help">
                    <small>Answer is case insensitive. Enter exactly as you set it up.</small>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit">Verify Answer</button>
                <a href="/forgot-password" class="cancel-link">Back</a>
            </div>
        <% } %>

        <% if (locals.attemptsRemaining !== undefined) { %>
            <div class="attempts-info">
                <p>Attempts remaining: <span class="attempts-count"><%= locals.attemptsRemaining %></span></p>
            </div>
        <% } %>
    </form>

    <div class="security-note">
        <h3>Security Information:</h3>
        <ul>
            <li>You have a limited number of attempts to answer correctly</li>
            <li>If you exceed the limit, you'll be temporarily locked out</li>
            <li>Answers are case insensitive but must match exactly otherwise</li>
            <li>If you can't remember your answer, contact support for assistance</li>
        </ul>
    </div>
</div>

